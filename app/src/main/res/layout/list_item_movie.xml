<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="#eceadb"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/posterId"
            android:layout_width="120dp"
            android:layout_height="120dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_gravity="top">

        <TextView
            android:id="@+id/title_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:paddingRight="16dp"
            android:textStyle="bold"
            android:textColor="#006a76"
            android:textSize="18sp"
            tools:text="Lord of The Rings"
            fontPath="fonts/SourceSansPro-Bold.ttf"
            />

        <TextView
            android:id="@+id/subtitle_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#28575c"
            android:textStyle="italic"
            tools:text="13-03-1994"
            android:paddingRight="16dp"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/description_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:textColor="#333333"
            tools:text="Emre"
            android:paddingRight="16dp"
            android:textSize="14sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/rating_image_id"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:scaleType="center"
            android:src="@drawable/star"
            />

        <TextView
            android:id="@+id/rating_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textStyle="bold"
            tools:text="9.4"
            android:textColor="#D50000"
            android:textSize="16sp"
            />

    </LinearLayout>

</LinearLayout>